{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions":
        [
            {
                "name": "client",
                "image": "anajji/multi-client",
                "hostname": "client",
                "essential": false},
            {
                "name": "server",
                "image": "anajji/multi-server",
                "hostname": "api",
                "essential": false},
            {
                "name": "worker",
                "image": "anajji/multi-worker",
                "hostname": "worker",
                "essential": false},
            {
                "name": "nginx",
                "image": "anajji/multi-nginx",
                "essential": true,
                "portMappings": [
                    {
                        "hostPort": 80,
                        "containerPort":80
                    }
                ],
                "links": ["client", "server"]
            }
        ]

}